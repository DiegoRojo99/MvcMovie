@model MvcMovie.Models.Star

@{
    ViewData["Title"] = "Delete";
}

<h1>Delete</h1>

<h3>Are you sure you want to delete this?</h3>
<div>
    <h4>Star</h4>
    <hr />
    @if(@Model!=null && @Model.Movie!=null && @Model.Actor!=null){
        <dl class="row">
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.MovieId)
            </dt>
            <dd class = "col-sm-10">
                @Model.Movie.Title
            </dd>
            <dt class = "col-sm-2">
                @Html.DisplayNameFor(model => model.ActorId)
            </dt>
            <dd class = "col-sm-10">
                @Model.Actor.Name
            </dd>
        </dl>
    }
    
    <form asp-action="Delete">
        <input type="hidden" asp-for="StarId" />
        <input type="submit" value="Delete" class="btn btn-danger" /> |
        <a asp-action="Index">Back to List</a>
    </form>
</div>
