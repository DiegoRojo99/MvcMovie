@model MvcMovie.Models.Star

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>Star</h4>
    <hr />
    @if(Model!=null && @Model.Movie!=null && @Model.Actor!=null){
        <dl class="row">
            <dt class = "col-sm-2">
                Movie Title
            </dt>
            <dd class = "col-sm-10">
                @Model.Movie.Title
            </dd>
            <dt class = "col-sm-2">
                Actor Name
            </dt>
            <dd class = "col-sm-10">
                @Model.Actor.Name
            </dd>
        </dl>
    }
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.StarId">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
