                <label asp-for="ActorId" class="control-label"></label>
                <select id="actor-choices-select" asp-for="ActorId" class="form-control">
                    @if(allActors != null){
                        @foreach (var actor in allActors)
                            {
                                <option value=@actor.Id>@actor.Name</option>
