@model MvcMovie.Models.Star

@{
    ViewData["Title"] = "Edit";
    var allActors = ViewData["actors"] as IEnumerable<MvcMovie.Models.Actor>;
    var allMovies = ViewData["movies"] as IEnumerable<MvcMovie.Models.Movie>;
}

