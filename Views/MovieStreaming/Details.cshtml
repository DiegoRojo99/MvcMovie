@model MvcMovie.Models.MovieStreaming

@{
    ViewData["Title"] = "Details";
}

<h1>Details</h1>

<div>
    <h4>MovieStreaming</h4>
    <hr />
    @if(@Model!=null && @Model.StreamingService!=null && @Model.Movie!=null){
    <dl class="row">
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Movie)
        </dt>
        <dd class = "col-sm-10">
            @Model.Movie.Title
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.StreamingService)
        </dt>
        <dd class = "col-sm-10">
            @Model.StreamingService.Name
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.CountryCode)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.CountryCode)
