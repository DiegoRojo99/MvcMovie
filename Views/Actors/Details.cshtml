@model MvcMovie.Models.Actor

@{
    ViewData["Title"] = "Details";
}

<h1>@Model.Name</h1>

<div>
    <div class="row">
        <div class="col-4">
            <img class="actor-pic" src="@Model.Picture" />
        </div>
        <div class="col-6">
            <img class="actor-trailer" />
        </div>
    </div>
    <br/>
    <br/>
    <h4>Movies</h4>
    <div class="row">
        @if(@Model.Stars != null){
                @foreach(var item in @Model.Stars){
                    @if(@item!=null && @item.MovieId!=null && @item.Movie!=null){
                        <div class="col">
                            <a href="http://localhost:5073/Movies/Details/@item.MovieId" class="list-item">
                                <img class="movie-in-actor" src="@item.Movie.Poster" alt="@item.Movie.Title" />
                            </a>
                        </div>
                    }
                }
            }
    </div>
</div>
<div>
    <a asp-action="Edit" asp-route-id="@Model?.Id">Edit</a> |
    <a asp-action="Index">Back to List</a>
</div>
